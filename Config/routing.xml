<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
    <!-- Thelia 2.0 backward compatibility -->

    <route id="mailjet.save" path="/admin/module/Mailjet" methods="post">
        <default key="_controller">Mailjet\Controller\MailjetConfigController::saveAction</default>
    </route>
    <route id="mailjet.add.contact.list" path="/admin/module/Mailjet/contact-list/add" methods="post">
        <default key="_controller">Mailjet\Controller\MailjetConfigController::addContactListAction</default>
    </route>
    <route id="mailjet.update.contact.list" path="/admin/module/Mailjet/contact-list/update/{id}" methods="post">
        <default key="_controller">Mailjet\Controller\MailjetConfigController::updateContactListAction</default>
        <requirement key="id">\d+</requirement>
    </route>
    <route id="mailjet.del.contact.list" path="/admin/module/Mailjet/contact-list/delete">
        <default key="_controller">Mailjet\Controller\MailjetConfigController::deleteContactAction</default>
    </route>
    <route id="mailjet.set.default.contact.list" path="/admin/module/Mailjet/contact-list/set-default">
        <default key="_controller">Mailjet\Controller\MailjetConfigController::setDefaultContactAction</default>
    </route>

</routes>
