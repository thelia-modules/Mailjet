<?xml version="1.0" encoding="UTF-8"?>
<database defaultIdMethod="native" name="thelia">
    <table name="mailjet_newsletter" namespace="Mailjet\Model">
        <column name="id" type="INTEGER" required="true" primaryKey="true" autoIncrement="true"/>
        <column name="mailjet_id" type="VARCHAR" size="255" required="true" />
        <column name="email" type="VARCHAR" size="255" required="true" />
        <column name="relation_id" type="VARCHAR" size="255" />

        <index name="idx_mailjet_newsletter_email">
            <index-column name="email" />
        </index>
        <index name="idx_mailjet_newsletter_relation_id">
            <index-column name="relation_id" />
        </index>

        <unique name="email_UNIQUE">
            <unique-column name="email" />
        </unique>
        <unique name="relation_id_UNIQUE">
            <unique-column name="relation_id" />
        </unique>
    </table>

    <table name="mailjet_contact_list" namespace="Mailjet\Model">
        <column name="id_cl" type="INTEGER" autoIncrement="true" primaryKey="true" />
        <column name="name_cl" type="VARCHAR" size="255" required="true" />
        <column name="slug_cl" type="VARCHAR" size="255" required="true" />
        <column name="locale" type="VARCHAR" size="255" required="true" />
        <column name="default_list" type="BOOLEAN" required="true"/>

        <unique name="name_UNIQUE">
            <unique-column name="name_cl" />
        </unique>
        <unique name="slug_UNIQUE">
            <unique-column name="slug_cl" />
        </unique>
    </table>

    <!--
    See propel documentation on http://propelorm.org for all information about schema file
    -->
    <external-schema filename="local/config/schema.xml" referenceOnly="true" />
</database>
